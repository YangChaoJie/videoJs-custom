{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./",
    "paths": {
      "src": [
        "./src/*"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/types/video.js"
  ],
  "exclude": [
    "public",
    "dist",
    "src/Utils"
  ]
}
